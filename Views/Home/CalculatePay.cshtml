@model dynamic

<h1>Contract Details</h1>

<form asp-action="CalculateContractValues" method="get">
    <label for="contractId">Enter Claim ID:</label>
    <input type="text" id="contractId" name="contractId" required />
    <button type="submit">Get Contract Details</button>
</form>

<form asp-action="ValidateClaim" method="get">
    <label for="validateClaimId">Enter Claim ID for Validation:</label>
    <input type="text" id="validateClaimId" name="claimId" required />
    <button type="submit">Validate Claim</button>
</form>

@if (ViewBag.ValidationErrors != null)
{
    <h2>Validation Results</h2>
    <ul>
        @foreach (var error in ViewBag.ValidationErrors)
        {
            <li>@error</li>
        }
    </ul>
}

@if (Model != null && Model.ClaimID != null)
{
    <h2>Contract Details</h2>
    <table>
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Hours Worked</th>
                <th>Hourly Pay</th>
                <th>Contract Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ClaimID</td>
                <td>@Model.hoursWorked</td>
                <td>@Model.hourlyPay</td>
                <td>@Model.ContractValue</td>
            </tr>
        </tbody>
    </table>
}
