@model PROG6212_PART2_ST10396724.Models.Claim
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Contract Claims</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        }

        h2 {
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #555;
        }

        input[type="text"], input[type="date"], input[type="number"], select, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .view-btn {
            background-color: #007bff;
            color: white;
        }

            .view-btn:hover {
                background-color: #0056b3;
            }

        .update-btn {
            background-color: #ffc107;
            color: white;
        }

            .update-btn:hover {
                background-color: #e0a800;
            }

        .save-btn {
            background-color: #28a745;
            color: white;
        }

            .save-btn:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>


    <header>
        <h1>Lecturer Contract Claims</h1>
    </header>

    <div class="container">
        <h2>Enter Your Details</h2>
        <form asp-action="CreateClaim" asp-controller="Operations" method="post">
            <div class="form-group">
                <label asp-for="LecturerID" class="control-label"></label>
                <input asp-for="LecturerID" class="form-control" />
                <span asp-validation-for="LecturerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hoursWorked" class="control-label"></label>
                <input asp-for="hoursWorked" class="form-control" />
                <span asp-validation-for="hoursWorked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hourlyPay" class="control-label"></label>
                <input asp-for="hourlyPay" class="form-control" />
                <span asp-validation-for="hourlyPay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ApprovalStatus" value="Pending" />
            <button type="submit" class="btn btn-primary">Submit Claim</button>
        </form>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>

</body>
</html>  